<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">

      {{#m-card
        title='Rooms'}}
        <ul class="collection">
          {{#each model.rooms as |room|}}
            <li class="collection-item avatar">
              <i class="material-icons green circle">chat</i>
              <span class="title">{{room.name}}</span>
              <p class="grey-text">Owner: {{room.owner.email}}</p>
              <span class="secondary-content">

                {{!-- REMOVE ROOM BUTTON --}}
                <i class="material-icons red-text"
                  onclick={{route-action 'removeRoom' room}}>
                  remove_circle
                </i>

              </span>
            </li>
          {{else}}
            <li class="collection-item">
              No rooms yet ☹️
            </li>
          {{/each}}
        </ul>
      {{/m-card}}
      {{#m-card
        title="Create a new room"
        buttonText="Create"
        onsubmit=(route-action 'createRoom')}}
        <div class="row create-room">
          {{m-input value=model.newRoom.name label="Room Name" classNames='col s8' errors=model.newRoom.errors}}
        </div>
      {{/m-card}}
    </div>
  </div>
</div>
