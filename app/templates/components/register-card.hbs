{{#m-card
  onsubmit=attrs.onsubmit
  title="Register with Peepchat"
  buttonText="Register"}}
  <div class="row">
    {{m-input
      value=model.email
      errors=(v-get model 'email' 'messages')
      classNames="col s12"
      type="email"
      label="Username"}}
  </div>
  <div class="row">
    {{m-input
      value=model.password
      errors=(v-get model 'password' 'messages')
      classNames="col s12"
      type="password"
      label="Password"}}
  </div>
  <div class="row">
    {{m-input
      value=model.passwordConfirmation
      errors=(v-get model 'passwordConfirmation' 'messages')
      classNames="col s12"
      type="password"
      label="Confirm Password"}}
  </div>
{{/m-card}}
